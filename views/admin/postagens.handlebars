<h2>Lista de postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
  <div class="card mt-3">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>{{descricao}}</p>
      <small>{{data}}</small><br>
      <small><b>{{categoria.nome}}</b></small><br>
      <a href="/admin/postagens/edit/{{_id}}">
        <button class="btn btn-success btn-sm mt-2">Editar Postagem</button>
      </a>
      <a href="/admin/postagens/deletar/{{_id}}">
        <button class="btn btn-danger btn-sm mt-2">Apagar Postagem</button>
      </a>
    </div>
  </div>
{{else}}
  <p>Nenhuma postagem registrada!</p>
{{/each}}